<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Blog\Category\Domain\Entity\Category" table="category" repository-class="App\Category\Post\Infrastructure\Repository\CategoryRepository">
        <id name="id" type="guid" column="id" length="36" />

        <field name="name" column="name" length="255" />
        <field name="slug" column="slug" length="255" />
    </entity>

</doctrine-mapping>
